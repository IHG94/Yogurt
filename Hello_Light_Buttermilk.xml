<actor_collection>
    <actor>
        <name>switch</name>
        <states>
            <localName>on</localName>
            <path>/active</path>
        </states>
        <instances>
            <instance>
                <ID>kitchen_switch</ID>
                <DBpath>//data/sensors/switch</DBpath>
            </instance>
        </instances>
    </actor>
    <actor>
        <name>light</name>
        <inputs>
            <input>switch</input>
        </inputs>
        <states>
            <localName>illuminated</localName>
            <path>/on</path>
        </states>
        <actions>
            <action>
                <on>
                    <trigger>switch.on</trigger>
                </on>
                <update>
                    <target>illuminated</target>
                    <value>switch.on</value>
                </update>
            </action>
        <actions>
        <instances>
            <instance>
                <ID>kitchen_light</ID>
                <DBpath>//data/devices/light[location='Kitchen']</DBpath>
                <ins>
                    <in>
                        <type>switch</type>
                        <inputID>kitchen_switch</inputID>
                    </in>
                </ins>
            </instance>
        </instances>
    </actor>
</actor_collection>